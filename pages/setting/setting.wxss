/* pages/setting/setting.wxss */

page{
  background: #DBEDF3;
}

.title{
    font-size: 60rpx;
    line-height: 200rpx;
    position: relative;
    text-align: center;
}

.setting_list{
    background: white;
    width: 90%;
    top: 20%;
    left: 5%;
    position: absolute;
    padding-bottom: 40rpx;
    border: 2rpx solid black;
}

.setting_cell{
    width: 100%;
    height: 100rpx;
}

.setting_text{
    font-size: 40rpx;
    line-height: 100rpx;
    display: inline;
    position: relative;
    left: 80rpx;
}

.setting_switch{
    height: 98rpx;
    position: relative;
    left: 250rpx;
    top: -13rpx;
}

#mid_setting_cell{
    border-top: 1px solid rgba(0, 0, 0, 0.1); 
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
