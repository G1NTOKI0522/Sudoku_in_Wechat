/* pages/result/result.wxss */
page{
  background: #DBEDF3;
}
.title{
    position: relative;
    top: 40rpx;
    height: 20%;
    text-align: center;
    font-size: 60rpx;
    line-height: 112rpx;
}

.container{
    height: 80%;
    margin-bottom: 100rpx;
}

.result_scroll{
    position: relative;
    top: 80rpx;
}

.result_list{
    width: 90%;
    height: 100%;
    align-items: center;
    display: flex;
    justify-content: space-between;
    margin: 5%;
    flex-direction: column;
    margin-bottom: 20rpx;
    border: 2rpx solid black;
    background: white;
}

.result_item{
    width: 100%;
    height: 200rpx;
    margin-bottom: 20rpx;
    display: flex;
}

.result_image{
    width: 200rpx;
    height: 200rpx;
    position: relative;
    left: 20rpx;
    top:10rpx;
}

.result_text{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    width: 360rpx;
}

.result_type{
    font-size: 30rpx;
    line-height: 56rpx;
    margin-left: 30rpx;
}
 
.result_date{
    font-size: 30rpx;
    line-height: 56rpx;
    text-align: left;
    margin-left: 30rpx;
} 

.result_time{
    font-size: 52rpx;
    line-height: 52rpx;
    text-align: center;
    position: relative;
}

.pkIcon{
    width: 80rpx;
    height: 80rpx;
    transform: rotate(30deg)
}