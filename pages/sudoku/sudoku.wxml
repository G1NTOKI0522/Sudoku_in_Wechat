<!--pages/sudoku.wxml-->
<view class='loading' hidden="{{generateOk}}">
  <view class="loading" style="position: absolute; top:0; right: 0; bottom: 0; left: 0;  background: white ; width: 100%; height: 100%; display: flex; justify-content: center; align-items: center; z-index: 99999">
    <view class="sk-cube-grid">
        <view class="sk-cube sk-cube1"></view>
        <view class="sk-cube sk-cube2"></view>
        <view class="sk-cube sk-cube3"></view>
        <view class="sk-cube sk-cube4"></view>
        <view class="sk-cube sk-cube5"></view>
        <view class="sk-cube sk-cube6"></view>
        <view class="sk-cube sk-cube7"></view>
        <view class="sk-cube sk-cube8"></view>
        <view class="sk-cube sk-cube9"></view>
    </view>
  </view>
</view>

<!--候选模式按钮引导-->
<view hidden='{{noteButton}}'>
<view class="layer" style='position:absolute; left:0; top:0; height:100%; width:750rpx;   background-color: black;  z-index: 99999; opacity:0.2;'>
</view>
<button class="layer" style='position:absolute; left:481rpx; top:47rpx; height:62rpx; width:222rpx;background-color: #CEF0B9;z-index: 99999; opacity:1;' bindtap='noteGuide'> 候选模式
</button>
<image class="arror" src='/images/arrow.png' style='position:absolute; top:33rpx; left:400rpx; z-index:999;width:80rpx; height:50rpx; transform: rotate(30deg);'>
</image>
<view style='position:absolute; font-size: 10px; color: #000080; left: 472rpx; top: 115rpx'> 点击“候选模式”按钮 </view>
</view>

<!--候选模式填空引导-->
<view hidden='{{noteFill}}'>
<view class="layer" style='position:absolute; left:0; top:0; height:100%; width:750rpx;   background-color: black;  z-index: 99999; opacity:0.2;'>
</view>
<view class="layer" style='position:absolute; left:264rpx; top:234rpx; height:73rpx; width:73rpx;background-color: white;z-index: 99999; opacity:1;' bindtap='noteFGuide'> 
</view>
<image class="arror" src='/images/arrow.png' style='position:absolute; top:233rpx; left:190rpx; z-index:999;width:80rpx; height:50rpx; transform: rotate(30deg);'>
</image>
<view style='position:absolute; font-size: 10px; color: #000080; left: 52rpx; top: 280rpx; z-index: 99999;'> 可同时填入多个数字 </view>
</view>

<!--候选模式填空完后-->
<view hidden='{{noteFull}}'>
<view class="layer" style='position:absolute; left:0; top:0; height:100%; width:750rpx;   background-color: black;  z-index: 99999; opacity:0.2;'>
</view>
<view class="layer" style='position:absolute; left:264rpx; top:234rpx; height:73rpx; width:73rpx;background-color: white;z-index: 99999; opacity:1;' bindtap='noteFuGuide'> 
</view>
<image class="arror" src='/images/arrow.png' style='position:absolute; top:233rpx; left:190rpx; z-index:999;width:80rpx; height:50rpx; transform: rotate(30deg);'>
</image>
<view style='position:absolute; font-size: 10px; color: #000080; left: 52rpx; top: 280rpx; z-index: 99999;'> 如填入'2、3、7 </view>
</view>

<view hidden='{{hightlg}}' bindtap='hightGuide'>
<view class="layer" style='position:absolute; left:0; top:0; height:100%; width:750rpx;   background-color: black;  z-index: 99999; opacity:0.2;'>
</view>
<image src='/images/hightlight.png' style='position:absolute; top:500rpx; left:220rpx; z-index:999;width:300rpx; height:100rpx; transform: rotate(0deg);'>
</image>
<view style='position:absolute; font-size: 10px; color: #000080; left: 222rpx; top: 380rpx; z-index: 99999;'> 当在设置页面选择高亮提醒后 </view>
</view>

<view hidden='{{hightnum}}'>
<view class="layer" style='position:absolute; left:0; top:0; height:100%; width:750rpx;   background-color: black;  z-index: 99999; opacity:0.2;'>
</view>
<view class="layer" style='position:absolute; left:220rpx; top:889rpx; height:103rpx; width:103rpx;background-color: white;z-index: 99999; opacity:1; '  bindtap='hightFill'> 
<view style='color: "#4169E1"; text-align: center font-size: 30px'>1</view>  
</view>
</view>
    

<view class = "page_container" hidden='{{completed}}'>

    <view class="function_button">
    <button class ="new" type="default" size="mini" bindtap='undo'> 撤销 </button>
    <view wx:if="{{timeShowOrNot}}" class="time"> {{timeText}} </view> 
    <view wx:else class="time"> 干巴爹 </view>
    <button class="note{{note? 1 : 0}}" size="mini" bindtap='changeNote' > 候选模式 </button>
    </view>


    <view class="boardContainer">
    <canvas canvas-id='board' id='board' class='canvasBoard' disable-scroll="true"></canvas>
    <canvas canvas-id='boardData' id='boardData' class='boardData' bindtouchstart="cellSelect" disable-scroll="true"></canvas>
    <canvas canvas-id='table' id='table' class='canvasTable' bindtouchstart="tableSelect" disable-scroll="true"></canvas>
    </view> 

</view>

<view class='shareCard' hidden='{{!completed}}' >
    <canvas class="my_canvas" canvas-id='cardCanvas' >
        <image class='closeButton' src='/images/close.png' bindtap='close' color="black" size="34"></image>
  </canvas>
   
   <button class='saveButton' bindtap='save'>保存分享到朋友圈</button>
</view>